---
import Layout from '../../../layouts/Layout.astro';
import videobooksData from '../../../data/videobooks.json';
---
<Layout title="Videobooks | [Your Library Name]" currentPage="/library/videobooks/">
  <div class="category-page">
    <h1>Videobook Library</h1>
    <p>Watch and learn with our curated collection of videobooks.</p>
    
    <div class="item-grid">
      {videobooksData.map(videobook => (
        <a href={`/library/videobooks/${videobook.slug}`} class="item-card videobook-card">
          <div class="video-thumbnail-placeholder">
            <img src={`https://i.ytimg.com/vi/${videobook.youtubeId}/mqdefault.jpg`} alt={`Thumbnail for ${videobook.title}`} class="item-thumbnail"/>
            <div class="play-icon">â–¶</div>
          </div>
          <h4>{videobook.title}</h4>
          {videobook.presenter && <p class="presenter"><em>Presented by: {videobook.presenter}</em></p>}
          <span class="watch-now">Watch Now &rarr;</span>
        </a>
      ))}
    </div>
  </div>
</Layout>

<style>
  /* Shared styles can be refactored */
  .category-page h1 {
    margin-bottom: 0.5rem;
    font-size: 2.2em;
  }
  .category-page > p {
    margin-bottom: 2rem;
    font-size: 1.1em;
    color: #555;
  }
  .item-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }
  .item-card {
    display: block;
    background-color: #fff;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    /* padding: 1.5rem; Remove padding to let thumbnail fill */
    text-decoration: none;
    color: inherit;
    transition: box-shadow 0.3s ease, transform 0.3s ease;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    overflow: hidden; /* To contain thumbnail styling */
  }
  .item-card:hover {
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    transform: translateY(-5px);
  }
  .video-thumbnail-placeholder {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9; /* For video thumbnails */
    background-color: #000;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .item-thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .play-icon {
    position: absolute;
    font-size: 3em;
    color: rgba(255,255,255,0.8);
    background-color: rgba(0,0,0,0.3);
    border-radius: 50%;
    padding: 0.2em 0.5em;
    line-height: 1;
    transition: transform 0.2s ease;
  }
  .item-card:hover .play-icon {
    transform: scale(1.1);
  }
  .item-card h4 {
    margin: 1rem 1.5rem 0.5rem; /* Add padding back for text content */
    font-size: 1.2em;
    color: #007bff;
  }
  .item-card .presenter {
    font-size: 0.9em;
    color: #6c757d;
    margin: 0 1.5rem 0.75rem;
  }
  .watch-now {
    display: block; /* Make it a block to apply margin */
    font-weight: 600;
    color: #007bff;
    font-size: 0.9em;
    margin: 0 1.5rem 1rem; /* Consistent padding */
  }
</style>
